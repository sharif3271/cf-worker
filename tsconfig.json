{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021"],
		"module": "ES2022",
		"moduleResolution": "node",
    "baseUrl": "./", 
		"types": ["@cloudflare/workers-types", "@types/mocha", "@types/jest"],
		"resolveJsonModule": true,
		"checkJs": false,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
    "declaration": true,
    "outDir": "dist"
	},
  "include": ["./src/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "test/*.test.ts",
    "example/*.example.ts"
  ]
}
