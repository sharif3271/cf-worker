{
	"compilerOptions": {
		"target": "es2021",
		"lib": ["es2021"],
		"module": "es2022",
		"moduleResolution": "node",
    "baseUrl": "./", 
		"types": ["@cloudflare/workers-types", "./src/globals.d.ts"],
		"resolveJsonModule": true,
		"checkJs": false,
		"noEmit": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
  "include": ["src/**/*"]
}
