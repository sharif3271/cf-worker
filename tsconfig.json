{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021"],
		"module": "ES2022",
		"moduleResolution": "node",
    "baseUrl": "./", 
		"types": ["@cloudflare/workers-types", "./global.d.ts"],
		"resolveJsonModule": true,
		"checkJs": false,
		// "isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
	},
  "include": ["./src/*.ts", "./global.d.ts"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
